<script>
    // BEÉPÍTETT STRATÉGIAI ADATBÁZIS
    const hCorpDB = {
        iphone_14_pro: { weightG: 206, goldG: 0.034, difficulty: 3, confidence: 0.85 },
        samsung_s23_ultra: { weightG: 234, goldG: 0.031, difficulty: 3, confidence: 0.80 },
        dell_poweredge_r750: { weightG: 30000, goldG: 1.8, difficulty: 5, confidence: 0.75 },
        cisco_catalyst_9300: { weightG: 8000, goldG: 0.9, difficulty: 7, confidence: 0.70 },
        siemens_mri_board: { weightG: 2500, goldG: 1.2, difficulty: 8, confidence: 0.65 }
    };

    const riskModels = {
        EU: { multiplier: 1.0, shippingPerTon: 800 },
        CN: { multiplier: 1.3, shippingPerTon: 1200 },
        NG: { multiplier: 1.8, shippingPerTon: 1800 }
    };

    function runHCorpEngine() {
        const type = document.getElementById('deviceType').value;
        const weightKg = parseFloat(document.getElementById('weight').value);
        const origin = document.getElementById('origin').value;
        const goldPrice = 65; // $ per gramm (fix v1.0 benchmark)

        const device = hCorpDB[type];
        const risk = riskModels[origin];

        // 1. Darabszám becslés
        const count = (weightKg * 1000) / device.weightG;

        // 2. Arany hozam számítás (Cinikus modell: beépített adat-bizalmatlanság)
        const grossGold = device.goldG * count * device.confidence;
        const recoverableGold = grossGold * 0.85; // 15% technológiai veszteség

        // 3. Költségmodell
        const difficultyFactor = device.difficulty > 6 ? 2.5 : (device.difficulty > 3 ? 1.6 : 1);
        const processingCost = (weightKg * 0.15) * difficultyFactor * 1.1; // +10% váratlan
        const shippingCost = (weightKg / 1000) * risk.shippingPerTon;

        // 4. Netto érték (Kockázati szorzóval büntetve)
        const grossValue = (recoverableGold * goldPrice) / risk.multiplier;
        const netProfit = grossValue - processingCost - shippingCost;

        // MEGJELENÍTÉS
        document.getElementById('resultArea').style.display = 'block';
        document.getElementById('netProfit').innerText = '$' + Math.max(0, Math.round(netProfit)).toLocaleString();
        document.getElementById('grossGold').innerText = (device.goldG * count).toFixed(2) + ' g';
        document.getElementById('recGold').innerText = recoverableGold.toFixed(2) + ' g';
        document.getElementById('procCost').innerText = '-$' + Math.round(processingCost + shippingCost).toLocaleString();
        
        const rBadge = document.getElementById('riskBadge');
        rBadge.innerText = risk.multiplier + 'x KOCKÁZAT';
        rBadge.className = 'badge-risk ' + (risk.multiplier > 1.5 ? 'bg-danger' : (risk.multiplier > 1.1 ? 'bg-warning text-dark' : 'bg-success'));
    }
</script>

